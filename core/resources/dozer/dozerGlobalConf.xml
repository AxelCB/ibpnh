<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
	<configuration>
		<stop-on-errors>true</stop-on-errors>
		<date-format>dd/MM/yyyy HH:mm:ss.SSS</date-format>
		<wildcard>true</wildcard>
		<relationship-type>non-cumulative</relationship-type>
		<custom-converters> 
		<!-- These are always bi-directional  -->
      		<converter type="org.ibpnh.core.utils.dozer.converter.BigDecimalCustomConverter" >
        		<class-a>org.ibpnh.core.utils.BigDecimalWithoutTypeAdapting</class-a>
        		<class-b>java.math.BigDecimal</class-b>
	      	</converter>
		</custom-converters>
	</configuration>

	<mapping>
		<class-a map-null="false">org.ibpnh.core.model.user.RoleType
		</class-a>
		<class-b>org.ibpnh.core.vo.user.RoleTypeVo</class-b>

		<field remove-orphans="true">
			<a>roleTypeFunctions</a>
			<b>roleTypeFunctions</b>
		</field>

		<field>
			<a>passwordReseter.id</a>
			<b>passwordReseterId</b>
		</field>
	</mapping>

	<mapping map-id="non-deep-RoleTypeVo">
		<class-a>org.ibpnh.core.model.user.RoleType</class-a>
		<class-b>org.ibpnh.core.vo.user.RoleTypeVo</class-b>

		<field-exclude>
			<a>roleTypeFunctions</a>
			<b>roleTypeFunctions</b>
		</field-exclude>

		<field-exclude>
			<a>passwordReseter</a>
			<b>passwordReseter</b>
		</field-exclude>
	</mapping>

	<mapping>
		<class-a>org.ibpnh.core.model.user.Role</class-a>
		<class-b>org.ibpnh.core.vo.user.RoleVo</class-b>

		<field remove-orphans="true">
			<a>roleFunctions</a>
			<b>roleFunctions</b>
		</field>
	</mapping>

	<mapping wildcard="false">
		<class-a>org.ibpnh.core.model.user.RoleTypeFunction</class-a>
		<class-b>org.ibpnh.core.vo.user.RoleTypeFunctionVo</class-b>

		<field>
			<a>id</a>
			<b>id</b>
		</field>

		<field>
			<a>enabled</a>
			<b>enabled</b>
		</field>

		<field>
			<a>disabledCause</a>
			<b>disabledCause</b>
		</field>

		<field>
			<a>function.id</a>
			<b>functionId</b>
		</field>

		<field>
			<a>function.name</a>
			<b>name</b>
		</field>

		<field>
			<a>function.description</a>
			<b>description</b>
		</field>

		<field>
			<a>function.uri</a>
			<b>uri</b>
		</field>
	</mapping>

	<mapping wildcard="false">
		<class-a>org.ibpnh.core.model.user.RoleFunction</class-a>
		<class-b>org.ibpnh.core.vo.user.RoleFunctionVo</class-b>

		<field>
			<a>id</a>
			<b>roleFunctionId</b>
		</field>

		<field>
			<a>function.id</a>
			<b>id</b>
		</field>

		<field>
			<a>enabled</a>
			<b>enabled</b>
		</field>

		<field>
			<a>disabledCause</a>
			<b>disabledCause</b>
		</field>

		<field>
			<a>function.name</a>
			<b>name</b>
		</field>

		<field>
			<a>function.description</a>
			<b>description</b>
		</field>

		<field>
			<a>function.menuName</a>
			<b>menuName</b>
		</field>

		<field>
			<a>function.submenuName</a>
			<b>submenuName</b>
		</field>

		<field>
			<a>function.actionName</a>
			<b>actionName</b>
		</field>

		<field>
			<a>function.uri</a>
			<b>uri</b>
		</field>
	</mapping>

	<mapping map-id="non-deep-UserVo">
		<class-a>org.ibpnh.core.model.user.User</class-a>
		<class-b>org.ibpnh.core.vo.user.UserVo</class-b>

		<field-exclude>
			<a>role</a>
			<b>role</b>
		</field-exclude>

		<field>
			<a>role.roleType.id</a>
			<b>role.roleType.id</b>
		</field>

		<field>
			<a>role.roleType.name</a>
			<b>role.roleType.name</b>
		</field>

		<field>
			<a>role.roleType.passwordReseter.id</a>
			<b>role.roleType.passwordReseterId</b>
		</field>
		
		<field>
			<a>role.roleType.roleTypeEnum</a>
			<b>role.roleType.roleTypeEnum</b>
		</field>
	</mapping>
	
	<mapping map-id="only-role-functions-UserVo">
		<class-a>org.ibpnh.core.model.user.User</class-a>
		<class-b>org.ibpnh.core.vo.user.UserVo</class-b>
		
		<field>
			<a>role.roleFunctions</a>
			<b>role.roleFunctions</b>
		</field>
	</mapping>

	<mapping>
		<class-a>org.ibpnh.core.model.configuration.ticket.Ticket</class-a>
		<class-b>org.ibpnh.core.vo.configuration.ticket.TicketVo</class-b>

		<field remove-orphans="true">
			<a>ticketLines</a>
			<b>ticketLines</b>
		</field>
	</mapping>
</mappings>